<!DOCTYPE html>
<html lang="fr">

	{% include 'head.html.twig' %}

	<body class="bg-dark text-light">

		{% include 'navbar.html.twig' %}

		{% for message in app.flashes('success') %}
			<div class="alert alert-success text-center">{{ message }}</div>
		{% endfor %}
		{% for message in app.flashes('info') %}
			<div class="alert alert-info text-center">{{ message }}</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger text-center">{{ message }}</div>
		{% endfor %}

		{# Bootstrap Breadcrumbs #}
		{% if (app.request.attributes.get('_route') != 'login') %}
			{% if (app.request.attributes.get('_route') != 'app_home') %}
				{% block breadcrumbs %}
					<div class="container">
						<div class="row">
							<div class="col">
								<nav aria-label="breadcrumb">
									<ol class="breadcrumb">
										<li class="breadcrumb-item">
											<a class="text-info" href="#">Home</a>
										</li>
										<li class="breadcrumb-item">
											<a class="text-info" href="#">Library</a>
										</li>
										<li class="breadcrumb-item active" aria-current="page">Data</li>
									</ol>
								</nav>
							</div>u
						</div>
					</div>
				{% endblock %}
			{% endif %}
		{% endif %}


		{# Google Breadcrumbs #}
		{#
											{% import 'breadcrumbs.html.twig' as breadcrumbs %}
											{{ breadcrumbs.render([
												{'url': url('app_home'), 'text': 'Homepage'}, 
											    {'url': url('app_category'), 'text': ' > Categories'}, 
											    {'text': article.title},
											]) }}
											 #}

		{% block body %}{% endblock %}

		{% include 'footer.html.twig' %}

		<script src="/js/js.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
		{% block javascripts %}{% endblock %}
	</body>
</html></body></html>
