{% extends 'base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-3 mb-5 text-center">{{ product.name }}</h1>
		<div class="row">
			<div class="col-4">
				<img src="{{ product.image }}" class="img-thumbnail">
			</div>
			<div class="col-8">
				<table class="table table-dark border border-light">
					<tbody>
						<tr>
							<th>Prix</th>
							<td>{{ product.price }} â‚¬</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ product.description }}</td>
						</tr>
						<tr>
							<th>Contenu</th>
							<td>{{ product.content }}</td>
						</tr>
						<tr>
							<th>Promotion</th>
							<td>{{ product.discount ? 'Yes' : 'No' }}</td>
						</tr>
                        <tr>
                        <th class="text-success">Achat</th>
                        <td><a href="{{ path('app_cart_add', {'id': product.id}) }}" title="Ajouter au panier" class="btn btn-primary {% if product.quantity == 0 %} disabled btn-secondary {% endif %}">
            <i class="fa-solid fa-cart-plus mr-1"></i>
            </a></td>
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
