{% extends 'base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-3 mb-5 text-center">{{ product.name }}</h1>
		<div class="row">
			<div
				class="col-4">
				{# <img src="{{ product.image }}" class="img-thumbnail mb-3"> #}

				<div id="carouselExampleIndicators" class="carousel slide mb-5 text-center" data-ride="carousel" data-interval="8000">
					<ol class="carousel-indicators">
						{% if product.image1 %}
							<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
							<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
							<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
						{% endif %}
					</ol>
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img class="img-thumbnail border border-info bg bg-dark" src="/img/{{ product.image }}" onerror="this.onerror=null; this.src='{{ product.image }}'" alt="...">
							<div class="carousel-caption d-none d-md-block"></div>
						</div>
						{% if product.image1 %}
							<div class="carousel-item">
								<img class="img-thumbnail border border-secondary bg bg-dark" src="/img/{{ product.image1 }}" onerror="this.onerror=null; this.src='{{ product.image1 }}'" alt="...">
								<div class="carousel-caption d-none d-md-block"></div>
							</div>
							<div class="carousel-item">
								<img class="img-thumbnail border border-secondary bg bg-dark" src="/img/{{ product.image2 }}" onerror="this.onerror=null; this.src='{{ product.image2 }}'" alt="...">
								<div class="carousel-caption d-none d-md-block"></div>
							</div>
						{% endif %}
						<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
				</div>
			</div>
			<div class="col">
				<div>
					<table
						class="mt-3 mb-3 table table-striped table-dark text-white">
						{# class="table table-dark border border-light"> #}
						<tbody>
							<tr>
								<th>Prix</th>
								<td>{{ product.price }}
									â‚¬</td>
							</tr>
							<tr>
								<th>Description</th>
								<td>{{ product.description }}</td>
							</tr>
							<tr>
								<th>Contenu</th>
								<td>{{ product.content }}</td>
							</tr>
							<tr>
								<th>En stock</th>
								<td>
									{% if product.quantity > 0 %}Oui{% else %}Non
									{% endif %}
								</td>
							</tr>
							<tr>
								<th>Promotion</th>
								<td>{{ product.discount ? 'Oui' : 'Non' }}</td>
							</tr>
							<tr>
								<th class="text-success">Achat</th>
								<td>
									<a href="{{ path('app_cart_add', {'id': product.id}) }}" title="Ajouter au panier" class="btn btn-primary{% if product.quantity == 0 %} disabled btn-secondary {% endif %}">
										<i class="fa-solid fa-cart-plus"></i>
									</a>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
