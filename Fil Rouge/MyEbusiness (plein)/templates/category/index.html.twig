{% extends 'base.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block body %}
		<div class="container d-flex justify-content-center">
		{% if categories|length > 0 %}
			<div class="row">
				<h1 class="col-12 text-info mb-5 mt-3">Choisissez votre catégorie</h1>
				<div class="col-12 col-md-6">
					<ul style="list-style-type: none;" class="list-group">
						{% for category in categories %}
							<li class="mt-1 mb-1">
								<button class="btn btn-dark border border-secondary text-decoration-none d-flex mt2 mb-2 position-relative">
									<i class="fa-solid fa-guitar text-secondary"></i>
									<h3>
										<a class="text-decoration-none text-light ml-3 mr-3" href="{{ path('app_catalogue', {'category': category.id}) }}">
											{{ category.name }}
										</a>
									</h3>
									<span class="badge rounded-pill border border-light bg-secondary ml-1">{{ category.products|length }}</span>
								</button>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		{% else %}
			<h1 class="mt-3 mb-5">Aucune catégorie trouvée!</h1>
		{% endif %}
	</div>


{% endblock %}
