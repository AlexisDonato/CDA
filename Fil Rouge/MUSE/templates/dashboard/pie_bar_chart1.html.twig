{% block head %}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      // Load Charts and the corechart and barchart packages.
      google.charts.load('current', {'packages':['corechart']});

      // Draw the pie chart and bar chart when Charts is loaded.
      google.charts.setOnLoadCallback(drawPieBarChart);

      function drawPieBarChart() {

        var piechart_data = new google.visualization.DataTable();
        piechart_data.addColumn('string', 'quantity');
        piechart_data.addColumn('number', 'quantit√©s en stock');
        piechart_data.addRows([
          {% for product in products %}
          ['{{product.name}}', {{product.quantity}}],
          {% endfor %}

          // ['Produit 1', 5],
          // ['Produit 2', 1],
          // ['Produit 3', 2],
          // ['Produit 4', 1],
           ['', 0]
        ]);

        var piechart_options = {
                       title:'Produits en stock',
                       width:400,
                       height:300,
                       is3D: true,
                       backgroundColor: '#4a5c4f',
                       };
        var piechart = new google.visualization.PieChart(document.getElementById('piechart_div'));
        piechart.draw(piechart_data, piechart_options);

        // var barchart_options = {
        //                title:'Produits en stock',
        //                width:400,
        //                height:300,
        //                legend: 'none'
                       
        //                };
