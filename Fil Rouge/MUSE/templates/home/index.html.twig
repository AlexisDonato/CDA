{% extends 'base.html.twig' %}


{% block title %}Accueil
{% endblock %}

{% block body %}
<style>
hr {
	display: block;
	clear: both;
	height: 0;
	margin: 40px 0 80px;
	padding: 0;
	border: 0;
	font-family: arial;
	text-align: center;
	font-size: 60px;
	line-height: 1;
}
hr:after {
	/* content: "\273D \273D \273D"; */
	height: 0;			
