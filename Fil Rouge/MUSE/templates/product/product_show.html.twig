{% extends 'base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}

	<h1 class="mt-3 mb-5 text-center">{{ product.name }}</h1>
	<div class="row d-flex align-items-center justify-content-center">
		<div class="col-md-4">

			<div id="carouselExampleIndicators" class="carousel slide mb-5 text-center" data-ride="carousel" data-interval="10000">
				<ol class="carousel-indicators">
					{% if product.image1 %}
						<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
						<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
						<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
					{% endif %}
				</ol>
				<div class="carousel-inner zoom">
					<div class="carousel-item active">
						<img style="height:500px; width:auto;" class="img-thumbnail border border-info bg bg-dark" src="/img/{{ product.image }}" onerror="this.onerror=null; this.src='{{ product.image }}'" alt="...">
						<div class="carousel-caption d-none d-md-block"></div>
					</div>
					{% if product.image1 %}
						<div class="carousel-item">
							<img style="height:500px; width:auto;"  class="img-thumbnail border border-secondary bg bg-dark" src="/img/{{ product.image1 }}" onerror="this.onerror=null; this.src='{{ product.image1 }}'" alt="...">
							<div class="carousel-caption d-none d-md-block"></div>
						</div>
						<div class="carousel-item">
							<img style="height:500px; width:auto;"  class="img-thumbnail border border-secondary bg bg-dark" src="/img/{{ product.image2 }}" onerror="this.onerror=null; this.src='{{ product.image2 }}'" alt="...">
							<div class="carousel-caption d-none d-md-block"></div>
						</div>
					{% endif %}
					<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div>
				<table
					class="mt-3 mb-3 table table-striped table-dark text-white roboto" border="1">
					{# class="table table-dark border border-light"> #}
					<tbody>
						<tr>
							<th>Marque</th>
							<td>{{ product.supplier }}
								<sup>©</sup>
							</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ product.description }}</td>
						</tr>
						<tr>
							<th>Caractéristiques</th>
							<td>{{ product.content }}</td>
						</tr>
						<tr>
							<th>En stock</th>
							{% if product.quantity > 0 %}
								<td>{{ product.quantity }}
								{% else %}
									<td class="text-danger">Non
									{% endif %}
								</td>
							</tr>
						</tr>
						<tr>
							<th>Promotion</th>
							{% if product.discount %}
								<td class="text-warning">-{{ product.discountRate *100}}%</td>
							{% else %}
								<td>{{ product.discount ? 'Oui' : '-' }}
								{% endif %}
							</td>
						</tr>
						<tr>
							<th>TVA</th>
							{% if app.user %}
								<td>{{ app.user.vat * 100}}%
									{% if is_granted('ROLE_PRO') %}
										(PRO)
									{% endif %}
								</td>
							{% else %}
								<td>20 %</td>
							{% endif %}
						</tr>
						<tr>
							<th>Prix
								<small>TTC</small>
							</th>
							{% if product.discount %}
								<td class="text-warning roboto">
									<s>{{ product.price }}
										€</s>
									<i class="fa-solid fa-arrow-right"></i>
									<b>
									{% else %}
										<td class="roboto h5">
										{% endif %}
										{% if app.user %}
											{{(product.price) * (1 - ( product.discountRate)) * (1 +  app.user.vat )}}
										{% else %}
											{{(product.price) * (1 - ( product.discountRate)) * 1.2 }}
										{% endif %}
										€</b>
								</td>
							</tr>
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}{% endif %}
						</tr>
						<tr>
							<th class="text-success">Ajouter au panier</th>
							<td>
								<a href="{{ path('app_cart_add', {'id': product.id}) }}" title="Ajouter au panier" class="btn btn-primary border border-light Hl{% if product.quantity == 0 %} disabled btn-secondary {% endif %}">
									<i class="fa-solid fa-cart-plus"></i>
								</a>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}
