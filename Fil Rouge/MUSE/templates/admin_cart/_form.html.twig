{{ form_start(form) }}
<div class="row d-flex align-items-center">

	<div class="col-md-6">
    {{ form_row(form.user) }}
    </div>
	<div class="col-md-6">
		{{ form_row(form.clientOrderId, {
            label: "NÂ° de commande"
        }) }}
	</div>

<div class="col-md-6">
		{{ form_row(form.billingAddress, {
            label: "Adresse de facturation"
        }) }}
	</div>
    <div class="col-md-6">
		{{ form_row(form.deliveryAddress, {
            label: "Adresse de livraison"
        }) }}
	</div>


	<div class="col-md-6">
		{{ form_row(form.validated) }}
	</div>
	<div class="col-md-6">
		{{ form_row(form.orderDate) }}
	</div>
	<div class="col-md-6">
		{{ form_row(form.shipped) }}
	</div>
	<div class="col-md-6">
		{{ form_row(form.shipmentDate) }}
	</div>
	<div class="col-md-6">
		{{ form_row(form.carrier) }}
	</div>
	<div class="col-md-6">
		{{ form_row(form.carrierShipmentId) }}
	</div>
    </div>
