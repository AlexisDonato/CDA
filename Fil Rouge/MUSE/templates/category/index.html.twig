{% extends 'base.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block body %}
	<div class="container mb-3">

		<h1 class="text-primary mb-5 mt-5">Catégories :</h1>

		{% if categories|length != 0 %}
			{% set col = 1 %}
			{% for category in categories %}
				{% if (col == 1)%}
					<div class="row">
					{% endif %}
					<div class="col-md-4 mb-3">
						{% if category.parentCategory %}

							<button class="btn  darker border border-secondary d-flex mt-1 mb-1 position-relative justify-content-center align-items-center">
								<i class="fa-solid fa-guitar text-secondary"></i>
								<h2>
									<a class="text-decoration-none text-light ml-3 mr-3" href="{{ path('app_catalogue', {'category': category.id}) }}">
										{{ category.name }}
									</a>
									{% if (category.product|length) != 0 %}<h2 class="badge rounded-pill border border-light bg-secondary text-white ml-1">{{ category.product|length }}</h2>
								</h2>{% else %}{% endif %}
							</button>

						</div>
					{% else %}
						<button id="category" class="btn darker border border-secondary d-flex mt-1 mb-1 position-relative justify-content-center align-items-center">
							<i class="fa-solid fa-guitar text-secondary"></i>
							<h2>
								<a class="text-decoration-none d-flex justify-content-center text-light ml-3 mr-3" href="{% if (category.product|length) != 0 %}{{ path('app_catalogue', {'category': category.id}) }}{% else %}{{ path('app_category', {'parent': category.id}) }}{% endif %}">
									{{ category.name }}
								</a>
							</h2>
							{% if (category.product|length) != 0 %}<h2 class="badge rounded-pill border border-light bg-secondary text-white ml-1">{{ category.product|length }}</h2>{% else %}{% endif %}
						</button>

					{% endif %}
				</div>

				{% if (col == 3) %}
				</div>
				{% set col = 1 %}
			{% else %}
				{% set col = col + 1 %}
			{% endif %}
		{% endfor %}

	</div>
{% else %}
	<h1 class="pt-5 mt-5 pb-5 mb-5">Aucune catégorie trouvée!</h1>
{% endif %}</div>{% endblock %}
