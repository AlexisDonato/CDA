{% extends 'base.html.twig' %}


{% block title %}Accueil
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center mb-3 mt-3 text-danger hometitle">Muse, as we see you stride !</h1>
	</div>

<div class="row">
	<div class="col-md-8">
	{% if products|length > 0 %}
		<div id="carouselExampleIndicators" class="carousel slide mb-3 text-center" data-ride="carousel" data-interval="2000">
			<ol class="carousel-indicators">
				<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
			</ol>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="img-thumbnail border border-danger" style="width: 25rem;" src="/img/BGHome.jpg" alt="...">
					<div class="carousel-caption d-none d-md-block">
						<h1 class="text-danger hometitle">MUSE</h1>
						<i class="fa-solid fa-guitar text-secondary"></i>
					</div>
				</div>
				{% for product in products|slice(5,5) %}
					<div class="carousel-item">
						<a href="{{ path('app_product_show', {'id': product.id}) }}"><img class="img-thumbnail border border-secondary" style="width: 40rem;" src="{{product.image}}" alt="Slide n°{{product.id}}"></a>
						<div class="carousel-caption d-none d-md-block">
							<h1 class="text-light mb-3">{{product.name}}</h1>
							<h3 class="text-white">
								<i>{{ product.price }}
									€</i>
							</h3>
							<p>
								<i>{{ product.description }}</i>
							</p>
						</div>
					</div>
				{% endfor %}
			</div>

			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	{% endif %}
	</div>
	<div class="col-md-4">
	<h2 class="mt-5 mb-5 text-center text-warning hometitle2">
		<b>Nos promotions exclusives !</b>
	</h2>
	<div id="carouselExampleIndicators" class="carousel slide mb-5 text-center" data-ride="carousel" data-interval="5000">
		<ol class="carousel-indicators">
			<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
			<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
			<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
			<li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
		</ol>
		<div class="carousel-inner">
			<div class="carousel-item active">
				<a href="{{ path('app_discount') }}"><img class="img-thumbnail border border-danger" style="width: 15rem; height: 10rem;" src="/img/Discount.jpeg" alt="..."></a>
				<div class="carousel-caption d-none d-md-block"></div>
			</div>
			<div class="carousel-item">
				<a href="{{ path('app_discount') }}"><img class="img-thumbnail border border-warning" style="width: 20rem; height: 10rem;" src="/img/Discount2.jpeg" alt="..."></a>
				<div class="carousel-caption d-none d-md-block"></div>
			</div>
			<div class="carousel-item">
				<a href="{{ path('app_discount') }}"><img class="img-thumbnail border border-warning" style="width: 20rem; height: 10rem;" src="/img/Discount3.jpeg" alt="..."></a>
				<div class="carousel-caption d-none d-md-block"></div>
			</div>
			<div class="carousel-item">
				<a href="{{ path('app_discount') }}"><img class="img-thumbnail border border-warning" style="width: 10rem; height: 10rem;" src="/img/Discount4.jpeg" alt="..."></a>
				<div class="carousel-caption d-none d-md-block"></div>
			</div>
		</div>

		<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
