{{ form_start(form) }}
<div class="row">
	<div class="form-group col-md-6">
    {{ form_row(form.name, {
            label: "Titre de l'adresse"
        }) }}
        <small>(ex: Domicile, Adresse de livraison n°1, Adresse de facturation n°3...)</small>
    </div>
    <div class="form-group col-md-6">
    {{ form_row(form.country, {
            label: "Pays"
        }) }}
    </div>
    <div class="form-group col-md-6">
    {{ form_row(form.zipcode, {
            label: "Code postal"
        }) }}
    </div>
    <div class="form-group col-md-6">
    {{ form_row(form.city, {
            label: "Ville"
        }) }}
    </div>
    <div class="form-group col-md-6">
    {{ form_row(form.pathType, {
            label: "Voie"
        }) }}<small>(ex: Rue du Gal de Gaulle, Avenue, Impasse...)</small>
    </div>
    <div class="form-group col-md-6">
    {{ form_row(form.pathNumber, {
            label: "N° de voie"
        }) }}
    </div>

<button class="btn btn-warning ml-5" onclick="history.back()">{{ button_label|default('Enregistrer votre nouvelle adresse') }}</button>
{{ form_end(form) }}
