{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	<style>
		body {
			background: url('/img/BG62.jpg') no-repeat center center fixed;
			-webkit-background-size: cover;
			-moz-background-size: cover;
			-o-background-size: cover;
			background-size: cover;
		}

	</style>

	<div class="container">
		<h1 class="text-center text-primary mt-3 mb-5">Votre Panier :</h1>
		{% if count > 0 %}
			<table class="table table-dark darker border border-info">
				<thead>
					<tr class="text-primary">
						<th id="audioFont" class="surround">Produit</th>
						<th id="audioFont" class="surround">Prix</th>
						<th id="audioFont" class="surround">Promotion</th>
						<th id="audioFont" class="surround">TVA</th>
						<th id="audioFont" class="surround">Quantité</th>
						<th id="audioFont" class="surround">Sous-total</th>
						<th</th>
					</tr>
				</thead>
				<tbody>
					{% for item in items %}
						<tr>
							<td><a class ="text-decoration-none" href="{{ path('app_product_show', {'id': item.product.id}) }}"><p class="productHl">{{item.Product.name}}</p></a></td>
							<td>{{item.Product.price}}</td>
							{% if item.product.discount %}<td class="text text-warning"><div class="d-flex justify-content-start">
				<h4 class="text-warning roboto">-{{ item.product.discountRate * 100 }}</h4><h5 class="text-warning">%</h5></div>{% else %}<td>-{% endif %}</td>
							<td>{{ app.user.vat * 100}}%</td>
							<td>{{item.Quantity}} {% if item.product.quantity == 0 %} ({{item.product.quantity}} left in stock) {% endif %}</td>
							<td class="roboto h5{% if item.product.discount %} text-warning{% endif %}">{{ ((item.Product.price * item.Quantity) * (1 - ( item.product.discountRate)) * (1 +  app.user.vat ))|number_format(2, '.', '') }}
								€</h4></td>
							<td>
								<a href="{{ path("app_cart_add", {id: item.product.id}) }}" title="Ajouter 1" class="btn btn-success btn-sm {% if item.product.quantity == 0 %} disabled {% endif %}">
									<i class="bi bi-cart-plus"></i>
								</a>
								<a href="{{ path("app_cart_remove", {id: item.product.id}) }}" title="Retirer 1" class="btn btn-primary btn-sm">
									<i class="bi bi-cart-dash"></i>
									<a href="{{ path ('app_cart_delete', {'id': item.product.id}) }}" title="Retirer la ligne" class="btn btn-danger ml-1 btn-sm">
										<i class="fas fa-trash"></i>
									</a>
								</td>
							</td>
						</tr>
					{% endfor %}
				</tbody>
				<tfoot>
					<tr>
						<td colspan="3" class="text-right surround h4"><b class="roboto">Total :</b>
						</td>
						<td class="roboto h4">{{ total|number_format(2, '.', '') }}
							€</td>
						<td colspan="5">
							<a href="{{ path("app_cart_deleteAll") }}" class="btn btn-danger" title="Supprimer le panier">
								<i class="bi bi-cart-x"></i>
							</a>
						</td>
					</tr>
				</tfoot>
			</table>
			<div class="text-center">
				<a id="audioFont" href="{{ path("app_order") }}" class="btn btn-primary btn-lg border-light mb-3 productHl" title="Finalisez votre commande">Finalisez votre commande</a>
			</div>
		{% else %}
			<h1 class="text-center mt-5 mb-5">Votre panier est vide !</h1>
			<br><br><br><br>
		{% endif %}
	</div>
{% endblock %}
