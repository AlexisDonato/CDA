{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<h1 class="text-info mt-3 mb-3">Register</h1>

	<div class"d-flex justify-content-center">
		{{ form_start(registrationForm) }}

		<div class="col-4 ml-5">{{ form_row(registrationForm.email) }}</div>
		<div class="col-4 ml-5">{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
			{{ form_row(registrationForm.agreeTerms) }}</div>

		<button class="btn btn-info ml-3 mt-3" type="submit">Register</button>

		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
