{% extends 'base.html.twig' %}

{% block title %}Artist
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center">
		<h1 class="text-info mt-3 mb-3">Artist details</h1>
	</div>

	<table class="table table-striped table-dark text-light">
		<tbody>
			<tr>
				<th class="text-info">Id</th>
				<td>{{ artist.id }}</td>
			</tr>
			<tr>
				<th class="text-info">Name</th>
				<td>{{ artist.name }}</td>
			</tr>
			<tr>
				<th class="text-info">Url</th>
				<td>{{ artist.url }}</td>
			</tr>
			<tr>
				<th class="text-info">Albums</th>
				{% for disc in artist.discs %}
					<td><img src="/img/{{ disc.picture }}" class="card-img-top img-thumbnail bg-dark" style="width:80px" alt="{{ disc.picture }}">
						{{ disc.title }}</td>
				{% endfor %}
			</tr>
		</tbody>
	</table>


	<a href="{{ path('app_artist_index') }}">
		<button class="btn btn-outline-info ml-3 mr-3">Artists list</button>
	</a><br>
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('app_artist_edit', {'id': artist.id}) }}">
			<button class="btn btn-info mt-3 ml-3">Edit</button>
		</a>
	{% endif %}

	{{ include('artist/_delete_form.html.twig') }}
{% endblock %}
